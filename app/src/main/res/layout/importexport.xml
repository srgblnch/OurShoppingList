<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RadioGroup
        android:id="@+id/OutputFormat"
        android:layout_width="match_parent"
        android:layout_height="66dp">

        <RadioButton
            android:id="@+id/CSV"
            android:layout_width="353dp"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="csv" />

    </RadioGroup>

    <LinearLayout
        android:id="@+id/directoryLayout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:weightSum="1">

        <TextView
            android:id="@+id/directoryLabel"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.18"
            android:text="Directory" />

        <EditText
            android:id="@+id/directoryText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="Path"
            android:layout_weight="0.88" />

        <Button
            android:id="@+id/directorySelector"
            style="@style/Widget.AppCompat.Button.Small"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:text="..." />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/filenameLayout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:weightSum="1">

        <TextView
            android:id="@+id/filenameLabel"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.18"
            android:text="File name" />

        <EditText
            android:id="@+id/filenameText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="Name"
            android:layout_weight="0.85" />

        <Button
            android:id="@+id/fileSelector"
            style="@style/Widget.AppCompat.Button.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="..." />

    </LinearLayout>

    <Button
        android:id="@+id/exporter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Export" />

    <Button
        android:id="@+id/importer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Import" />
</LinearLayout>